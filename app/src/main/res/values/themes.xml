<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YacTong" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/any_200</item>
        <item name="colorPrimaryVariant">@color/any_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/back_200</item>
        <item name="colorSecondaryVariant">@color/back_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="chipStyle">@drawable/selector_key_button</item>

        <!--디폴트 스플래시 화면 없애는 코드-->
<!--        <item name="android:windowIsTranslucent">false</item>-->

    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_white_20</item>
    </style>

    <!--Splash 화면-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        //스플래쉬의 바탕화면을 말한다.

        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_logo</item>
        //스플래쉬에 들어갈 아이콘을 지정한다. mipmap으로 해야 깨지지 않는다.

        <item name="windowSplashScreenAnimationDuration">1000</item>
        //duration을 지정한다. 나는 1초

        <item name="postSplashScreenTheme">@style/Theme.YacTong</item>
        //스플래쉬의 테마를 지정한다. 나는 노액션바
    </style>
</resources>