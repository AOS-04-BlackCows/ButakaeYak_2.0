<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".ui.textrecognition.OcrFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.blackcows.butakaeyak.ui.textrecognition.GraphicOverlay
                android:id="@+id/graphic_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true" />
        </androidx.camera.view.PreviewView>

        <TextView
            android:id="@+id/textViewOcrResult"
            style="@style/headline_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="진단서 혹은 약봉투\n인식해 주세요"
            android:textAlignment="center"

            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/camera_guide_RB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/camera_guide_LT" />

        <ImageView
            android:id="@+id/camera_guide_LT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="90dp"
            android:src="@drawable/camera_guide"
            app:layout_constraintBottom_toTopOf="@+id/Horizontal_centerline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_centerline"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/camera_guide_RT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="90dp"
            android:rotation="90"
            android:src="@drawable/camera_guide"
            app:layout_constraintBottom_toTopOf="@+id/Horizontal_centerline"
            app:layout_constraintStart_toStartOf="@+id/vertical_centerline"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/camera_guide_RB"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="90dp"
            android:rotation="180"
            android:src="@drawable/camera_guide"
            app:layout_constraintTop_toTopOf="@+id/Horizontal_centerline"
            app:layout_constraintStart_toStartOf="@+id/vertical_centerline"/>

        <ImageView
            android:id="@+id/camera_guide_LB"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="90dp"
            android:rotation="270"
            android:src="@drawable/camera_guide"
            app:layout_constraintTop_toTopOf="@+id/Horizontal_centerline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_centerline"/>

        <ImageButton
            android:id="@+id/take_photo_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/btn_camera"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/select_photo_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:src="@drawable/btn_gallery"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_centerline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".50" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Horizontal_centerline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".50" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loding_Progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX=".2"
            android:scaleY=".2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>