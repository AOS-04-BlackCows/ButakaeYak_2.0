<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/header_logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/logo_final"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header_title"
            style="@style/medium_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="부탁해약"
            android:textColor="@color/back_500"
            app:layout_constraintBottom_toBottomOf="@+id/header_logo"
            app:layout_constraintStart_toEndOf="@+id/header_logo"
            app:layout_constraintTop_toTopOf="@+id/header_logo" />

        <View
            android:id="@+id/header_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/any_200"
            app:layout_constraintTop_toBottomOf="@+id/header_logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_add_medicine_container"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_rect_500_12dp"
        android:translationZ="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_medicine_group"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_medicine_1"
            style="@style/body_b"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/round_rect_500_bottom"
            android:elevation="0dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:stateListAnimator="@null"
            android:text="직접 등록"
            android:textColor="@color/black"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/btn_add_medicine_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/any_200"
            app:layout_constraintBottom_toTopOf="@+id/btn_add_medicine_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_medicine_2"
            style="@style/body_b"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/round_rect_500_top"
            android:elevation="0dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:stateListAnimator="@null"
            android:text="사진 등록"
            android:textColor="@color/black"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/btn_add_medicine_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_medicine_group"
        style="@style/medium_b"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round_long_rect_500"
        android:backgroundTint="@color/green"
        android:stateListAnimator="@null"
        android:text="+ 복약 등록"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:translationZ="2dp"
        app:elevation="0dp"
        app:icon="@drawable/baseline_add_14"
        app:iconGravity="start"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/header_public"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                style="@style/medium_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp"
                android:text="약 알림" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/home_cl_bg_today_medicine"
                android:paddingTop="20dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:text="오늘 복용해야 하는 약"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_rv_today_medicine_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_home_today_medicine_group" />

                <TextView
                    android:id="@+id/no_tdoay_medicine_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toBottomOf="@id/textView3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"

                    android:text="@string/no_medicine_group"
                    style="@style/body_gray"

                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/home_alarm_view_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/view_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_rv_today_medicine_group" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp"

                android:text="@string/knock_text"
                style="@style/medium_b"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="22dp"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"

                tools:listitem="@layout/knock_banner_item"
                tools:itemCount="4"
                >

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/textView6"
                style="@style/medium_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp"
                android:text="연결된 기타 서비스" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_connection_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/home_cl_bg_connection"
                android:elevation="2dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/home_connection_1_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_pharmacy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/home_connection_1_title"
                    style="@style/body_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="가까운 약국 찾기"
                    app:layout_constraintBottom_toTopOf="@+id/home_connection_1_desc"
                    app:layout_constraintStart_toEndOf="@+id/home_connection_1_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/home_connection_1_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주변의 약국을 쉽게 찾아보세요."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/home_connection_1_title"
                    app:layout_constraintTop_toBottomOf="@+id/home_connection_1_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_connection_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="120dp"
                android:background="@drawable/home_cl_bg_connection"
                android:elevation="2dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/home_connection_3_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_search_medicine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/home_connection_3_title"
                    style="@style/body_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="약 정보 검색 "
                    app:layout_constraintBottom_toTopOf="@+id/home_connection_3_desc"
                    app:layout_constraintStart_toEndOf="@+id/home_connection_3_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/home_connection_3_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원하는 약물의 효과와 부작용을 알아보세요."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/home_connection_3_title"
                    app:layout_constraintTop_toBottomOf="@+id/home_connection_3_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>